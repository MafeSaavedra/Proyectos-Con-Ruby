<h1>Lista de Tareas</h1>

<%= link_to "Nueva Tarea", new_task_path, class: "btn btn-primary" %>

<% if @tasks.present? %>
  <table>
    <thead>
      <tr>
        <th>Título</th>
        <th>Descripción</th>
        <th>Fecha Límite</th>
        <th>Estado</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.due_date&.strftime("%d/%m/%Y %H:%M") || "Sin fecha" %></td>
          <td><%= task.completed ? "✔️ Completa" : "❌ Pendiente" %></td>
          <td>
            <%= link_to "Editar", edit_task_path(task), class: "btn btn-sm btn-warning" %>
            <%= button_to "Eliminar", task_path(task), method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No hay tareas disponibles.</p>
<% end %>
